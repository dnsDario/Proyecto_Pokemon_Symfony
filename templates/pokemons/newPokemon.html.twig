{% extends 'base.html.twig' %}

{% block newPokemon %}
<div class="container" style="margin-top: 30px; margin-bottom: 30px; border: 0.5px solid black; padding: 20px; border-radius: 10px;">
    {% if pokemonImg is defined %}
    <h1 class="text-center mb-3">Editar Pokemon</h1>
    <div class="d-flex justify-content-center">
        <img src="{{pokemonImg}}" alt="pokemon" class="card-img-top align-self-center" style="width: 250px; height: auto;">
    </div>
    {{form(pokemonForm)}} 
    {% else %}
    <h1 class="text-center mb-3">Crear Nuevo Pokemon</h1>
    {{form(pokemonForm)}}
    {% endif %}
</div>
{% endblock %}