{% extends "base/base.html.twig" %}



{% block pokemons %}
<div class="row row-cols-1 row-cols-md-2 mt-3 d-flex justify-content-around">
{% for pokemon in pokemons %}

		<div class="card text-center;" style="width: 14rem; margin-bottom: 20px;  background-image: url('{{imageCards[pokemon.type]}}'); background-size: cover; background-position: center; background-repeat: no-repeat;">
			<h4 class="card-header" style="font-size: 18px; background-color: black; opacity: 0.6; color: white; text-align: center;">
				NÂº
				{{ pokemon.code }}
			</h4>
			<img src="{{asset(pokemon.img)}}" alt="pokemon" class="card-img-top">
			<div class="card-body" style="padding: 0.75rem !important;">
				<h4 class="card-title mt-2" style="color:white; font-weight: 700; text-align: center;">{{ pokemon.name }}</h4>
				<div style="display: flex; width: 100%; justify-content: space-around; ">
				<a href="{{path("pokemon_show",{"id":pokemon.id})}}" class="btn btn-info" style="padding: 0px; width: 55px">Info</a>
				{% if is_granted('ROLE_ADMIN') %}
				<a href="{{path("editPokemon", {"id":pokemon.id})}}" class="btn btn-success" style="padding: 0px; width: 55px">Editar</a>
				<a href="{{path("deletePokemon", {"id":pokemon.id})}}" class="btn btn-danger" style="padding: 0px; width: 55px">Borrar</a>
				{% endif %}
				</div>
			</div>
        </div>

{% endfor %}


    </div>
{% endblock %}